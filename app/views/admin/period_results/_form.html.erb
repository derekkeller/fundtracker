<%= form.error_messages %>
<p>
  <%= form.label :period %><br />
  <%= form.date_select :period, :order => [:month, :year], :include_blank => true %>
</p>
<p>
  <%= form.label :bookings %><br />
  <%= form.text_field :bookings %>
</p>
<span class="bold">Revenue</span>
<p>
  <%= form.label :revenue, "Other Revenue" %><br />
  <%= form.text_field :revenue %>
</p>
<% form.fields_for :custom_cells, @revenue do |builder| %>
	<p>
	  <%= builder.label builder.object.user_defined_category.name %><br />
	  <%= builder.text_field 'amount' %>
		<%= builder.hidden_field 'user_defined_category_id' %>
	</p>
<% end %>
<span class="bold">COGS</span>
